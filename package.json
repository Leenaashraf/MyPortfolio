{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Portfolio contact form backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t portfolio-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env portfolio-backend",
    "docker:run:prod": "docker run -p 3000:3000 -e EMAIL_USER -e EMAIL_PASS portfolio-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.1",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "dotenv": "^16.0.3"
  }
}
